{
  "componentUrl": "http://localhost:5173",
  "componentVersion": "1.0.10",
  "description": "<p>Gamify your promotions with Spinify. This app lets users spin for instant rewards, turning passive visitors into active, engaged customers with a fun and memorable experience.</p>",
  "manifestUrl": "http://localhost:5173/manifest.json",
  "manifestVersion": 1,
  "properties": [
    {
      "id": "spinnerType",
      "name": "Spinner Type",
      "dataType": "string",
      "inputType": "select",
      "defaultValue": "wheel",
      "options": [
        { "label": "Wheel", "value": "wheel" },
        { "label": "Slot Machine", "value": "slotMachine" }
      ],
      "required": true
    },
    {
      "id": "wheelColorTheme",
      "name": "Wheel Color Theme",
      "dataType": "string",
      "inputType": "select",
      "defaultValue": "default",
      "options": [
        { "label": "Default", "value": "default" },
        { "label": "Soft Gray", "value": "softGray" },
        { "label": "Nordic Calm", "value": "nordicCalm" },
        { "label": "Elegant Beige", "value": "elegantBeige" },
        { "label": "Coastal Mist", "value": "coastalMist" },
        { "label": "Minimal Night", "value": "minimalNight" },
        { "label": "Dusty Rose", "value": "dustyRose" },
        { "label": "Sage Green", "value": "sageGreen" },
        { "label": "Modern Blue", "value": "modernBlue" },
        { "label": "Ash Snow", "value": "ashSnow" },
        { "label": "Earth Stone", "value": "earthStone" }
      ],
      "required": true
    },
    {
      "id": "textColor",
      "name": "Text Color",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "#FFFFFF",
      "required": true
    },
    {
      "id": "loadingText",
      "name": "Loading Text",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "Loading Offers...",
      "required": true
    },
    {
      "id": "spinButtonText",
      "name": "Spin Button Text",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "SPIN!",
      "required": true
    },
    {
      "id": "spinningButtonText",
      "name": "Spinning Button Text",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "Spinning...",
      "required": true
    },
    {
      "id": "popupTitleWinning",
      "name": "Popup Title (Winning)",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "Congratulations!",
      "required": true
    },
    {
      "id": "popupTitleLosing",
      "name": "Popup Title (Losing)",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "Bad Luck!",
      "required": true
    },
    {
      "id": "popupSubtitleWinning",
      "name": "Popup Subtitle (Winning)",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "You won:",
      "required": true
    },
    {
      "id": "popupSubtitleLosing",
      "name": "Popup Subtitle (Losing)",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "Better luck next time!",
      "required": true
    },
    {
      "id": "copyButtonText",
      "name": "Copy Button Text",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "Copy Code",
      "required": true
    },
    {
      "id": "copiedButtonText",
      "name": "Copied Button Text",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "Copied!",
      "required": true
    },
    {
      "id": "closeButtonText",
      "name": "Close Button Text",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "Close",
      "required": true
    },
    {
      "id": "pointerColor",
      "name": "Wheel Pointer Color",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "#B91C1C",
      "required": true
    },
    {
      "id": "spinButtonColor",
      "name": "Spin Button Color",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "#00a63e",
      "required": true
    },
    {
      "id": "spinButtonTextColor",
      "name": "Spin Button Text Color",
      "dataType": "string",
      "inputType": "text",
      "defaultValue": "#FFFFFF",
      "required": true
    }
  ],
  "scopes": [
    "retailerMoniker",
    "carrier",
    "trackingNumbers",
    "orderNumbers",
    "productCategory",
    "email",
    "phone"
  ]
}
